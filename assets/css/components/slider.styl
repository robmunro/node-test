@import "../variable.styl"

.ui-slider
  position: relative
  text-align: left
  background: $grayLighter
  z-index: 1

  .ui-slider-range
    position: absolute
    z-index: 1
    font-size: 0.7em
    display: block
    border: 0
    background-position: 0 0
    box-shadow: none
    background-color: $gray
  
  .ui-slider-handle
    background: #fff
    border: 1px solid $gray
    position: absolute
    z-index: 2
    width: 16px
    height: 16px
    cursor: default
    outline: none
    -moz-box-shadow: none
    -webkit-box-shadow: none
    box-shadow: none
    padding: 0
    -moz-border-radius: 8px
    -webkit-border-radius: 8px
    border-radius: 8px
    margin-top: -4px
    margin-left: -7px
    
  &.ui-slider-disabled
    .ui-slider-handle
      display: none
      
    .ui-slider-range
       background-color: $grayLight
    
.ui-slider-horizontal
  height: 11px
  border: 1px solid $grayLight
  background-color: transparent
  
  .ui-slider-range
    height: 11px
    
.component-slider
  position: relative
  height: 12px
  background-color: #d2d3d3
  
  .ui-slider
    position: absolute
    width: 100%
    
    .ui-slider-range
      background-color: transparent
      
    &.ui-slider-disabled .ui-slider-range
      background-color: $grayLight

  .ui-slider-available
    position: absolute
    background-color: $gray
    width: 100%
    left: 1px
    top: 1px
    height: 11px

.component-slider.disabled
  .popover
  .ui-slider-avail1able
    opacity: 0
