.network-edit

  #logo-container
  #hero-container
    margin-bottom: 10px
    background-color: #fff
    margin-right: 20px
    border: solid 1px #ccc
    max-height: 190px


  #logo-container
    width: 198px
    height: 100px

    img
      max-width: 100%
      max-height: 100%
      margin: auto
      display: block


  #hero-container
    width: 425px
    height: 135px

    .hero-image
      width: 100%
      height: 100%
      background-position: 50% 0%
      background-size(contain)


  .placeholder-background
    background-image: url('/images/placeholder.png')
    background-position: center
    background-repeat: no-repeat


  //TODO: remove this once it's in the main layout
  .error-message-block
    min-height: 20px

    .error-message
      margin-top: 0
      line-height: 20px

